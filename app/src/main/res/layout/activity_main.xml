<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.eseo.safemyphone.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle notification"
        android:id="@+id/nouvelle_notification"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/switch3"
        android:layout_alignLeft="@+id/supprimer_notification"
        android:layout_alignStart="@+id/supprimer_notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:id="@+id/preference"
        android:layout_below="@+id/supprimer_notification"
        android:layout_alignLeft="@+id/supprimer_notification"
        android:layout_alignStart="@+id/supprimer_notification" />

    TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="SafeMyPhone"
    android:id="@+id/textView"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DÃ©marrer le service"
        android:id="@+id/TextService"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer notification"
        android:id="@+id/supprimer_notification"
        android:layout_below="@+id/nouvelle_notification"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Activer l&apos;envoie d&apos;e-mail"
        android:id="@+id/textEmail"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/switch1"
        android:layout_alignRight="@+id/preference"
        android:layout_alignEnd="@+id/preference" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_alignBottom="@+id/textEmail"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Activer les notifications"
        android:id="@+id/textView"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:checked="false"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir photos"
        android:id="@+id/listeNotifications"
        android:layout_below="@+id/preference"
        android:layout_alignRight="@+id/preference"
        android:layout_alignEnd="@+id/preference"
        android:layout_marginTop="26dp" />
</RelativeLayout>
